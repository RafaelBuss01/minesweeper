# A sample Gemfile
source "http://rubygems.org"
# gem "rails"
group :test do
  gem "rspec"
  gem 'simplecov', :require => false, :git => 'https://github.com/colszowka/simplecov.git'
  gem 'simplecov-html', :require => false, :git => 'https://github.com/colszowka/simplecov-html.git'
end

group :notify do
  gem "guard"
  gem "guard-rspec"
  gem 'rb-inotify'
  gem 'libnotify'
end
